[loggers]
keys=root
level=NOTSET

[logger_root]
handlers=file

[formatters]
keys=simple

[formatter_simple]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s

[handlers]
keys=file

[handler_file]
class=handlers.TimedRotatingFileHandler
interval=midnight
backupCount=5
formatter=simple
level=ERROR
args=('/var/log/radicale.log',)
